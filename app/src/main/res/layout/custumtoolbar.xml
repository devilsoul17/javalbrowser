<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbars"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:background="@drawable/actionbar_bg"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <Button
        android:id="@+id/btnTextViewForTab"
        android:layout_width="25dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="1"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:background="@drawable/ic_baseline_check_box_outline_blank_24"
        android:layout_height="30dp">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="9.4"
        android:background="@drawable/btngooglesearchs"
        android:elevation="2dp"
        android:weightSum="9.4">

        <ImageButton
            android:id="@+id/btnmic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:background="@drawable/micbuttonbackground"
            android:src="@drawable/ic_mic_none_black_24dp">
        </ImageButton>

        <EditText
            android:id="@+id/edtTextUrl"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="7.8"
            android:background="@color/transparent"
            android:hint="Enter Url Or Search"
            android:imeOptions="actionGo"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:textColor="@color/black">
        </EditText>

        <ImageButton
            android:id="@+id/btnrefresh"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.8"
            android:background="@drawable/hover_selector_two"
            android:pointerIcon="hand"/>

        <View
            android:layout_width="1.5dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_light2">
        </View>

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:layout_weight="0.8"
            android:background="@drawable/micbuttonbackground"
            android:src="@drawable/ic_search_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7">

        <ImageButton
            android:id="@+id/btnAddtobookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_bookmark_border_24">
        </ImageButton>

    </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>