<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="10">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.9">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppbarLayout">

        <include
            android:id="@+id/toolbars"
            layout="@layout/custumtoolbar"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/ProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:background="#FF0000"
                android:elevation="7dp"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill_vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView">

            </WebView>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/actionbar_bg"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/forward"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_forward_24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stop"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_outline_stop_24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/refbtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_outline_refresh_24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_outline_home_24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/more"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:src="@drawable/ic_outline_reorder_24"/>

    </LinearLayout>

</LinearLayout>